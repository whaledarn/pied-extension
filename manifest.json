{
  "manifest_version": 2,
  "name": "pied.",
  "version": "0.0.1",
  "browser_action":{
    "default_popup": "popout.html"
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" }

}
